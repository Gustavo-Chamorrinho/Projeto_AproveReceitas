</head>
<body>

   <div class="scroll-up-btn">
        <ion-icon name="chevron-up-outline"></ion-icon>
    </div>
    <div class="navbar">
        <div class="max-width">
            <div class="logo"><a href="#">Aprove<span> Receitas</span></a></div>
            <ul class="menu">
                <li><a asp-controller="Site" asp-action="SobreNos">Sobre Nós</a></li>
                <li><a asp-controller="Site" asp-action="CadastrarReceita">Receitas</a></li>
                <li><a asp-controller="Site" asp-action="Contato">Contato</a></li>
            </ul>
            <div class="menu-btn">
                <ion-icon name="menu-outline"></ion-icon>
            </div>

                        <div class ="UsuarioLogado">

                @if (Context.Session.GetString("UserId") != null)
                {
                    <a asp-controller="Site" asp-action="AreaUsuario">
                         <span style="color:white; font-size:22px;">Olá, @Context.Session.GetString("UserName")!</span>
                    </a>
                }

            </div>
        </div>
    </div>
    <section class="topo">
        <H1><span class="typing"></span></H1>
        <form method="post" asp-controller="BuscaReceita" asp-action="Buscar" class="mb-4">
            <div class="pesquisa">
                <input type="text" name="nome" class="form-control" placeholder="Digite o nome da receita" required />
                <div class="input-group-append">
                    <button class="btn btn-primary" type="submit">Buscar</button>
                </div>
            </div>
        </form>
        <br>
        <H2>Busque Sua Receita!</H2>
        @if (Model != null && Model.Count > 0)
        {
            @foreach (var receita in Model)
            {
                <div class="Semana">
                    <div class="card">
                        <div class="box">
                            <a asp-controller="Receitas" asp-action="ReceitaHotDog">
                                <img src="@receita.ImagemWeb" alt="">
                            </a>
                            <div class="text">@receita.Nome</div>
                            <p>@receita.Descricao</p>
                        </div>
                    </div>
@*                     <div class="card">
                        <div class="box">
                            <a href="receita3.html">
                                <img src="image/img-4.png" alt="">
                            </a>
                            <div class="text">@receita.Nome</div>
                            <p>@receita.Descricao <BR><br><br></p>
                        </div>
                    </div>
                    <div class="card">
                        <div class="box">
                            <a href="receita4.html">
                                <img src="image/img-2.png" alt="">
                            </a>
                            <div class="text">@receita.Nome</div>
                            <p>@receita.Descricao <br><br><br></p>
                        </div>
                    </div>*@
                </div> 
            }
        }
     </section>
    <hr class="line">
    <section class="Receitas">
        <H3>Receitas Completas</H3>
            <!--parte onde mostrar a lista de receitas-->
        @if (Model != null && Model.Count > 0)
        {
            @foreach (var receita in Model)
            {
                <div class=" ">
                    <img id="foto" alt="Foto da receita" src="@receita.ImagemWeb">
                    <h1 id="titulo">@receita.Nome</h1>
                    @foreach (var ingredientes in receita.Ingredientes)
                    {
                        
                            <h2>Ingredientes</h2>
                            <p>
                                @ingredientes
                                <br>
                            </p>
                        
                    }
                    <!--sobre a receita-->
                </div>
            }
        }


    </section> 
    <br>
